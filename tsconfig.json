{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
	  "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
	  "outDir": "dist"
  },
	"exclude": [
		"node_modules",
		"setupTests.js"
	],
	"include": [
		"jest.d.ts",
		"**/*.ts",
		"**/*.tsx"
	]
}
